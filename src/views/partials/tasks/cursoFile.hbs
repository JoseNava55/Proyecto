
{{#if cursos}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>Curso</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Costo</th>
            <th>Introduccion al curso</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        {{#each cursos}}
        <tr>
            <td><img class="someClass" src="{{path}}" width="100px"> </td> 
            <td>{{title}}</td>
            <td>{{description}}</td>    
            <td>{{pricing}}</td>  
            <td><a href="{{video}}"><i class="fa fa-solid fa-5x fa-video"></i></a></td>
        <td><a href="/edit/{{_id}}" class="btn btn-info">Editar</a>
            <a href="/delete/{{_id}}" class="btn btn-danger">Eliminar</a> </td>
        </tr>  
    </tbody>
    {{/each}} 
</table>
{{else}}
     <div class="h-100 d-flex align-items-center justify-content-center bg-dark">
      <div class="text-center text-white">
      <h1>No hay cursos</h1>
      <i class="fa fa-10x fa-pen-to-square" aria-hidden="true" style="color:rgb(255, 255, 255);"></i>
      </div>

  </div>
{{/if}}
